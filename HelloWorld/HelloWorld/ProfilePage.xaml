<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.ProfilePage"
             xmlns:ic="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             Title="{Binding Name}">
    <StackLayout>
        <ic:CircleImage Source="{Binding ImageUrl}" WidthRequest="200" HeightRequest="200" Aspect="AspectFill"></ic:CircleImage>
        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="20"/>
        <Label Text="{Binding Description}" FontSize="16"/>
    </StackLayout>
</ContentPage>